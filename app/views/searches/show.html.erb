<div class="container">
<!--This is the search form -->
  <div id="search-box">
  <%= form_tag("/search", method: "get", class: "form-inline") do %>
    <div class="form-group">
      <%= label_tag(:keywords, "") %>
      <%= text_field_tag(:keywords, @keywords, class: "form-control") %>
    </div>
    <div class="form-group">
      <%= submit_tag("Search", class: "btn btn-primary", :onclick => "$('#loading-indicator').show(); $('#search_results').hide(); ") %>
    </div>
  <% end %>
  </div>
</div>

<!-- Show the loading bar while searching -->
<%= image_tag("ajax-loader.gif", id: "loading-indicator", style: "display:none") %>

<!-- The results of the search are displayed below -->
<%= render "search_results" if @photos %>
